#include <iostream>
#include <string>
using namespace std;
/* 
  int - stores integers (whole numbers), without decimals, such as 123 or -123
  double - stores floating point numbers, with decimals, such as 19.99 or -19.99 
  char - stores single characters, such as 'a' or 'B'
  string - stores text, such as "Hello World".
  bool - stores values with two states: true or false 
*/

//cin can only read one-word string from user's input
//use getline(cin, name) *cin.ignore* before using 

//Recommend to still use std:: even after using namespace. 
//Reason why? Future scalability as advance languages progress. 

int main()
{
    std::string nameA = "Bob";
    int hours = 30, age;
    double pay = 853.01;
    bool highscore;
    std::string nameB;
    std::cout << nameA << std::endl;
    std::cout << hours << std::endl;
    std::cout << pay << std::endl;
    std::cout << "What's your age?" << std::endl;
    std::cin >> age; 
    std::cout << "Your age is " << age << std::endl;
    std::cout << "what is your name" << std::endl;
    std:cin.ignore();
    std::getline (cin, nameB);
    std::cout << "Hello " << nameB << "!" << std::endl;
    std::cout<<highscore<<std::endl;
    
    return 0;
}
